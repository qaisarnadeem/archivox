<div class="col-md-6 col-md-offset-3">
	<h1>Sign In</h1>
<%= form_tag authorize_users_path , :html => { :class => "form-horizontal event_session" ,'data-parsley-validate'=>''} do |f| %>
  <div class="form-group">
        <%= label_tag 'Email','Email' ,:class => 'control-label' %>
        <%= text_field_tag :email,'', :class => 'form-control' ,'data-parsley-required'=>'','data-parsley-trigger'=>'change','data-parsley-type'=>"email"%>
    </div>
  <div class="form-group">
        <%= label_tag 'Password','Password', :class => 'control-label' %>
        <%= password_field_tag :password,'', :class => 'form-control' ,'data-parsley-required'=>'','data-parsley-trigger'=>'change'%>
    </div>
  <div class="actions">
    <%= submit_tag 'Login' ,:class=>'btn btn-primary event-create'%>
  </div>
  </div>
<% end %>


<div class="col-lg-1"></div>
